---
const {PersonText, PersonCopy} = Astro.props;

import MyImage from "../assets/images/personcard1.jpg"
import Image from "astro/components/Image.astro"
---

<article>
    <Image class="personcard" src={MyImage} alt="personcard1"></Image>
    <h3>{PersonText}</h3>
    <p>{PersonCopy}</p>
    <svg></svg>
</article>

<style>
article {
    display: flex;
flex-direction: column;
align-items: center;
gap: 1.5625rem;
}

h3 {
color: #181818;

text-align: center;
font-family: var(--headings-font);
font-size: 1.875rem;
font-style: normal;
font-weight: 700;
line-height: 116%; /* 2.175rem */
}

p {
width: 20.5rem;
color: #595566;

text-align: center;
font-family: Lato;
font-size: 1rem;
font-style: normal;
font-weight: 400;
line-height: 147.5%; /* 1.475rem */
}

.personcard {
width: 28.5rem;
height: 42.625rem;
flex-shrink: 0;
}

</style>