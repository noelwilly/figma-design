import MyImage3 from "../assets/images/aboutbot1.jpg"
import MyImage4 from "../assets/images/aboutbot2.jpg"
import Image from "astro/components/Image.astro"

import Columns from "../components/Columns.astro"
---

	<MainLayout>
		<HeroHeader imgPath="/src/assets/images/banner_about.jpg" name="banner about" TitleText="About" variant="yellow" suptitle="Creative Services For Boost Your Business Growth"></HeroHeader>
		
		<section class="about-top">
