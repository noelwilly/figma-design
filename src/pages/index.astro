	</MainLayout>

<style>
:root {
    --checkmark-icon: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="%234EAF4E" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
}

	header, footer {
		height: 70px;
	}

	h2 {
		color: var(--heading-primary-color);
		font-family: var(--headings-font);
		font-size: var(--font-size-step-4);
		font-style: normal;
		font-weight: var(--font-weight-step-2);
		line-height: var(--lineheight-step-3)
	}

	p {
		color: var(--copy-primary-color);
		font-family: var(--copy-font);
		font-size: var(--font-size-step-1);
		font-style: normal;
		font-weight: 400;
		line-height: var(--lineheight-step-2);
		max-width: 36.875rem;
	}

	ul {
	}

	li {
		display: flex;
		align-items: center;
		gap: 1rem;
		font-size: 1rem;
		

		color: var(--copy-primary-color);
		font-family: var(--copy-font);
		font-size: var(--font-size-step-1);
		font-style: normal;
		font-weight: 400;
		line-height: var(--lineheight-step-1);
		max-width: 32.4375rem;
	}

	li:before {
		content: "";
		flex-shrink: 0;
		width: 1.6rem;
		aspect-ratio: 1;
		background: var(--checkmark-icon) 50% 50% / contain no-repeat;
		
	}

	.about1 {

		border-radius: 1.8rem;
	}

	.about-top {
		background: #FFF;
		padding: 2.25rem 0;
	}
	.about-mid1 {
		background: #F5F5F5;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2.125rem;
		padding: 5.25rem 0;

& article:last-child {
	place-self: end;
}
	}

	.about-mid2 {
display: inline-flex;
flex-direction: column;
align-items: center;
gap: 0.625rem;
padding: 5.25rem 0;

h2 {
max-width: 29.875rem;
height: 6.625rem;

color: #181818;

text-align: center;
font-family: var(--headings-font);
font-size: 2.8125rem;
font-style: normal;
font-weight: 700;
line-height: 116%; /* 3.2625rem */
}

p {
max-width: 45.75rem;
color: #595566;

text-align: center;
font-family: var(--copy-font);
font-size: 1rem;
font-style: normal;
font-weight: 400;
line-height: 1.475rem;
}

.videoimage {
	max-width: 60.125rem;
	height: 23.0625rem;
	flex-shrink: 0;

border-radius: 1.75rem;
opacity: 0.8;
background: #181818;
}
	}

	.about-mid3 {
background: #F5F5F5;
padding: 4.25rem 0;

h2 {
	max-width: 31.125rem;
color: #181818;

font-family: var(--headings-font);
font-size: 2.8125rem;
font-style: normal;
font-weight: 700;
line-height: 3.2625rem;
}

p {
max-width: 40.1875rem;

color: #595566;

font-family: Lato;
font-size: 1rem;
font-style: normal;
font-weight: 400;
line-height: 1.475rem;
}

 .wrapper {
		display: grid;
		grid-template-columns: 
		[full-start] 1fr
		[content-start] minmax(0, 75rem) [content-end]
		1fr [full-end];
		gap: 1rem;

		> * {
			grid-column: content;
		}
}
	}

	.about-bottom {
		padding: 3.25rem 0;
	}
	.about-bot {
max-width: 75.001rem;
height: 32.82831rem;
flex-shrink: 0;
border-radius: 1.875rem;
background: #181818;

display: flex;
justify-content: center;
align-items: center;
gap: 4.5625rem;

:first-child {
	display: grid;
	gap: 2rem;
	grid-template-rows: repeat(1fr);
}
h2 {
max-width: 26.71306rem;
height: 6.36463rem;

color: #FFF;
font-family: var(--headings-font);
font-size: 2.8125rem;
font-style: normal;
font-weight: 700;
line-height: 3.2625rem;
}

p {
	max-width: 26.44019rem;
height: 4.42775rem;

color: #FFF;
font-family: var(--copy-font);
font-size: 1rem;
font-style: normal;
font-weight: 400;
line-height: 1.475rem;
}

.aboutbot1 {
	max-width: 28.89619rem;
height: 14.13581rem;
flex-shrink: 0;
}

.aboutbot2 {
max-width: 27.38431rem;
height: 12.14506rem;
flex-shrink: 0;
}
	}

</style>