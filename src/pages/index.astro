		</article>
		</Columns>
		<Columns cols="4">
		<NumberCard NumberInfo="Successful Work" NumberNum="1128+"></NumberCard>
		<NumberCard NumberInfo="Team member" NumberNum="908+"></NumberCard>
		<NumberCard NumberInfo="Happy Customers" NumberNum="258+"></NumberCard>
		<NumberCard NumberInfo="Creative Idea" NumberNum="564+"></NumberCard>
		</Columns>
		</section>
		
		<section class="about-mid1 full">
